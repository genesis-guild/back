{
  "trailingComma": "all",
  "printWidth": 80,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "importOrderSortSpecifiers": true,
  "importOrderSeparation": true,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^modules/(.*)$",
    "^shared/(.*)$",
    "^[./]"
  ],
  "importOrderParserPlugins": [
    "jsx",
    "typescript",
    "classProperties",
    "decorators-legacy"
  ]
}
